<div>
  <h3>Bienvenido {{user}}</h3>

  <p><b>Rol:</b> {{role}}</p>
  <p>cart id: <span id="cartId">{{cart}}</span></p>
  <a href="/users"> <button> Ir al perfil del usuario </button></a>

  <button id="botonLogout" type="submit">LOGOUT</button>
  <a href="/users/cart/{{cart}}"><button>Ir al carrito</button></a>
</div>

<button id="comprar">Finalizar compra</button>
<div>
  <h2>Lista de productos</h2>
  <table>
    <tr>
      <th>ID</th>
      <th>TITLE</th>
      <th>DESCRIPTION</th>
      <th>PRICE</th>
      <th>CODE</th>
      <th>STATUS</th>
      <th>CATEGORY</th>
      <th>STOCK</th>
      <th>THUMBNAILS</th>
      <th>OWNER</th>
    </tr>
    <tbody>
      {{#each products.docs}}
        <tr>
          <td id="productId">{{this.id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.code}}</td>
          <td>{{this.status}}</td>
          <td>{{this.category}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.thumbnails}}</td>
          <td>{{this.owner}}</td>
          <td><form action="/api/carts/{{../cart}}/product/{{this.id}}" method="post">
            <button   id="agregarItem" type="submit" class="bi bi-cart-plus">Add to cart</button>
          </form></td>
    
        </tr>
      {{/each}}
    </tbody>
  </table>
  <br />

  <div class="position-relative m-4">

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {{#if products.hasPrevPage}}
          <li class="page-item"><a
              class="page-link"
              href="/users/products/?page={{products.prevPage}}&&limit={{products.limit}}"
            >Previous</a></li>
        {{/if}}

        {{#if products.hasNextPage}}
          <li class="page-item"><a
              class="page-link"
              href="/users/products/?page={{products.nextPage}}&&limit={{products.limit}}"
            >Next</a></li>
        {{/if}}

      </ul>
    </nav>
    <p>
      Current Page:
      {{products.page}}
    </p>
  </div>

  <a href="/chat"><button> Ir al chat </button></a>
  <a href="/"><button>Ir a home</button></a>

  <script src="/socket.io/socket.io.js"></script>

</div>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
/>
<script src="/js/profile.js"></script>