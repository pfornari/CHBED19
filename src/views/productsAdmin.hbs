<div>

  <h3>Página de administración de productos {{user}}</h3>

  <p><b>Rol:</b> {{role}}</p>

  <button id="botonLogout" type="submit">LOGOUT</button>
  <a href="/users/products"><button>Ver todos los productos</button></a>
</div>

<div>
  <h2>Lista de productos</h2>

  <table>
    <tr>
      <th>ID</th>
      <th>TITLE</th>
      <th>DESCRIPTION</th>
      <th>PRICE</th>
      <th>CODE</th>
      <th>STATUS</th>
      <th>CATEGORY</th>
      <th>STOCK</th>
      <th>THUMBNAILS</th>
      <th>OWNER</th>
    </tr>
    <tbody>
      {{#each products.docs}}
        <tr>
          <td id="productId">{{this.id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.code}}</td>
          <td>{{this.status}}</td>
          <td>{{this.category}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.thumbnails}}</td>
          <td>{{this.owner}}</td>

          <td>
            <a href="/api/products/editProduct/{{this.id}}"><button
                id="editarItem"
                type="button"
                class="btn btn-secondary"
              ><i class="bi bi-pencil-square"></i></button></a></td>

          <td>
            <button id="borrarItem" type="button" class="btn btn-secondary"><i
                class="bi bi-file-earmark-x"
              ></i></button></td>
        </tr>
      {{/each}}
    </tbody>

  </table>

  <div>Añadir producto:
    <a href="/api/products/addProduct"><button
        type="button"
        class="btn btn-secondary"
      ><i class="bi bi-file-earmark-plus-fill"></i></button></a>
  </div>

  <br />

  <div class="position-relative m-4">

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {{#if products.hasPrevPage}}
          <li class="page-item"><a
              class="page-link"
              href="/api/products/?page={{products.prevPage}}&&limit={{products.limit}}"
            >Previous</a></li>
        {{/if}}

        {{#if products.hasNextPage}}
          <li class="page-item"><a
              class="page-link"
              href="/api/products/?page={{products.nextPage}}&&limit={{products.limit}}"
            >Next</a></li>
        {{/if}}

      </ul>
    </nav>
    <p>
      Current Page:
      {{products.page}}
    </p>
  </div>

</div>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
/>
<script src="/js/admin.js"></script>